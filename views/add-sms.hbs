<script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.js" defer></script>

<div class="container max-w-full mx-auto md:py-24 px-6">
  <div class="max-w-sm mx-auto px-6">
        <div class="relative flex flex-wrap">
            <div class="w-full relative">
                <div class="md:mt-6">
                    <div class="text-center font-semibold text-black">
                        Add your Sms
                    </div>
                    <div class="text-center font-base text-black">
                        Complete these inputs
                    </div>



                    {{!-- FORM , POST REQUEST --}}

                    <form method="POST" action="http://localhost:8050/add/sms" class="mt-8" >
                        <div class="mx-auto max-w-lg ">


                            {{!-- Your number --}}

                            <div class="py-1">
                                <span class="px-1 text-sm text-gray-600">Your number</span>
                                <input placeholder="From this number" name="your_number" type="text"
                                        class="text-md block px-3 py-2 rounded-lg w-full
                                        bg-white border-2 border-gray-300 placeholder-gray-600 shadow-md focus:placeholder-gray-500 focus:bg-white focus:border-gray-600 focus:outline-none">
                            </div>



                            {{!-- Summa --}}

                            <div class="py-1">
                                <span class="px-1 text-sm text-gray-600">Summa</span>
                                <input placeholder="Cash" name="price" type="text"
                                       class="text-md block px-3 py-2 rounded-lg w-full
                bg-white border-2 border-gray-300 placeholder-gray-600 shadow-md focus:placeholder-gray-500 focus:bg-white focus:border-gray-600 focus:outline-none">
                            </div>


                            {{!-- Trafic --}}

                            <div class="py-1">
                                <span class="px-1 text-sm text-gray-600">Trafic</span>
                                <input placeholder="Traffic's number" name="traffic" type="text" x-model="password"
                                       class="text-md block px-3 py-2 rounded-lg w-full
                bg-white border-2 border-gray-300 placeholder-gray-600 shadow-md focus:placeholder-gray-500 focus:bg-white focus:border-gray-600 focus:outline-none">
                            </div>


                            {{!-- Number --}}

                            <div class="py-1">
                                <span class="px-1 text-sm text-gray-600">Number</span>
                                <input name="client_number" placeholder="To this number" type="tel" x-model="password_confirm"
                                       class="text-md block px-3 py-2 rounded-lg w-full
                bg-white border-2 border-gray-300 placeholder-gray-600 shadow-md focus:placeholder-gray-500 focus:bg-white focus:border-gray-600 focus:outline-none">
                            </div>
                            



                
                            <button type="submit" class="mt-3 text-lg font-semibold
            bg-gray-800 w-full text-white rounded-lg
            px-6 py-3 block shadow-xl hover:text-white hover:bg-black">
                                Submit
                            </button>
                        </div>
                    </form>

